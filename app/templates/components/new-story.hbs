{{#if addNewStory}}
<h1>New Story</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title"}}
    </div>

    <div class="form-group">
      <label for="paragraph">Teaser</label>
      {{input value=paragraph id="paragraph"}}
    </div>

    <div class="form-group">
      <label for="fullParagraph">Full Story</label>
      {{input value=fullParagraph id="fullParagraph"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image"}}
    </div>

    <div class="form-group">
      <label for="timeAgo">Enter a number</label>
      {{input value=timeAgo id="timeAgo"}}
    </div>

    <button {{action 'saveStory'}}>Save</button>
  </form>
</div>
{{else}}
<button {{action 'storyFormShow'}}>New Story</button>
{{/if}}
